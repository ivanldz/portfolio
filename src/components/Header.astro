---
import Icon from "astro-icon";
---

<header id="menu-button">
  <div class="bars">
    <div class="bar1"></div>
    <div class="bar2"></div>
    <div class="bar3"></div>
  </div>
</header>
<nav id="menu">
  <div class="shadow"></div>
  <div class="sidebar">
    <div id="exit-button" class="bars">
      <Icon name="ion:arrow-back" width="30px" />
    </div>
    <ul class="links">
      <li><a href="#">Home</a></li>
      <li><a href="#">Expertice</a></li>
      <li><a href="#">About Me</a></li>
      <li><a href="#">Experience</a></li>
      <li><a href="#">Inicio</a></li>
    </ul>
  </div>
</nav>

<script>
  const menuButton = document.getElementById("menu-button");
  const exitButton = document.getElementById("exit-button");
  const shadow = document.getElementsByClassName("shadow");
  const menu = document.getElementById("menu");
  menuButton?.addEventListener("click", () => menu?.classList.toggle("show"));
  exitButton?.addEventListener("click", () => menu?.classList.toggle("show"));
  shadow[0]?.addEventListener("click", () => menu?.classList.toggle("show"));
</script>

<style>
  /* burger button header */

  #menu-button {
    position: fixed;
    top: 20px;
    left: 10px;
    height: 65px;
    width: 65px;
    border-radius: 50%;
    background-color: #7d7d7d36;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    z-index: 2;
  }

  #menu-button:active {
    background-color: #cecece;
    transform: translateY(-3px);
  }

  /* sidebar */

  .sidebar {
    background: white;
    position: fixed;
    height: 100%;
    top: 0;
    left: -100vw;
    overflow: auto;
    max-width: 320px;
    min-width: 180px;
    width: 40vw;
    transition: 0.1s;
    z-index: 3;
  }

  .shadow {
    position: fixed;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: all 0.3s cubic-bezier(0.6, 0.4, 0, 1);
    cursor: pointer;
    z-index: 2;
    display: none;
  }

  .show .sidebar {
    transition: 0.3s;
    left: 0;
  }

  .show .shadow {
    left: 0;
    top: 0;
    display: inline-block;
    background-color: rgba(17, 21, 24, 0.45);
    opacity: 1;
    transition: all 0.3s cubic-bezier(0.6, 0.4, 0, 1);
  }

  .links {
    list-style: none;
    font-size: larger;
  }

  .links li {
    margin-bottom: 20px;
    cursor: pointer;
  }

  .links li a {
    color: #000;
    text-decoration: none;
  }

  .links a:hover {
    text-decoration: underline;
  }

  /* Menu Icon */

  .bars div {
    height: 4px;
    background-color: #585858;
    margin-bottom: 6px;
    border-radius: 100px;
  }

  .bar1 {
    width: 32px;
  }

  .bar2 {
    width: 25px;
  }

  .bar3 {
    width: 18px;
  }

  #exit-button {
    margin-top: 20px;
    margin-left: 10px;
    height: 60px;
    width: 60px;
    border-radius: 50%;
    background-color: #7d7d7d36;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>
