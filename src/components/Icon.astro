---
interface Props {
  src: string;
  height?: number;
  width?: number;
}

const { src, height, width } = Astro.props;
---

<img src={src} alt="icon" height={height ?? 30} width={width} />

<style>
  img {
    height: 30px;
  }
  @media (max-width: 500px) {
    img {
      height: 18px;
    }
  }
</style>
