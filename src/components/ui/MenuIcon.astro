---
let value = false;
function toggle(value: boolean) {
  return !value;
}
---

<div class="container" @click={toggle}>
  <div class={value ? "show" : ""}>
    <div class="bar1"></div>
    <div class="bar2"></div>
    <div class="bar3"></div>
  </div>
</div>

<style>
  .container {
    display: inline-block;
    cursor: pointer;
    margin-left: 18px;
  }

  .bar1,
  .bar2,
  .bar3 {
    width: 32px;
    height: 4px;
    background-color: #585858;
    margin: 6px 0;
    transition: 0.4s;
    border-radius: 100px;
  }

  .bar2 {
    width: 25px;
  }

  .bar3 {
    width: 18px;
  }

  .show .bar1 {
    transform: translate(0, 11px) rotate(-45deg);
  }

  .show .bar2 {
    opacity: 0;
  }

  .show .bar3 {
    width: 32px;
    transform: translate(0, -11px) rotate(45deg);
  }
</style>
